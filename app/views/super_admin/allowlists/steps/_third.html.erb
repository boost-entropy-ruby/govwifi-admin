<h1 class="govuk-heading-l">Is the organisation's name on the register?</h1>
<div class="govuk-form-group">
  <%= select_tag "organisations_register", options_for_select(@organisation_names << "", ""), class: "govuk-select" %>
</div>
<%= link_to "Yes", new_super_admin_allowlist_path(allowlist: { step: Allowlist::FIFTH, register: "Yes", admin: @allowlist.admin }),
            class: "govuk-button", role: "button", draggable: "false", "data-module" => "govuk-button" %>
<%= link_to "No", new_super_admin_allowlist_path(allowlist: { step: Allowlist::FOURTH, register: "No", admin: @allowlist.admin }),
            class: "govuk-button", role: "button", draggable: "false", "data-module" => "govuk-button" %>

<%= render "shared/organisation_register_dropdown" %>
