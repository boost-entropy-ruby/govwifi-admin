<% content_for :page_title, "Remove team member - #{yield :page_title}", flush: true %>

<% if @membership.preserve_admin_permissions? %>
  <%= render "memberships/cannot_remove_user" %>
<% else %>
  <div class="govuk-error-summary" role="alert">
    <h2 class="govuk-error-summary__title">
      Are you sure you want to remove <%= @membership.user.name %>?
    </h2>
      <div class="govuk-error-summary__body">
        <%= button_to "Yes, remove this team member", membership_path(@membership), method: :delete, class: "govuk-button green-button" %>
        <%= link_to "Cancel", :back, class: "govuk-link--no-visited-state" %>
    </div>
  </div>
<% end %>
